<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ParcAuto_Web_App.ViewModels"
             x:Class="ParcAuto_Web_App.Views.VehicleDetailsPage"
             x:DataType="viewmodels:VehicleDetailsViewModel"
             Title="Vehicle Details">
    
    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="15">
            
            <Frame BorderColor="{StaticResource Primary}" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding Vehicle.DisplayName}"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    
                    <BoxView HeightRequest="1" Color="{StaticResource Primary}" Margin="0,10"/>
                    
                    <Grid ColumnDefinitions="120,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="8">
                        <Label Grid.Row="0" Grid.Column="0" Text="Make:" FontAttributes="Bold"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding Vehicle.Make}"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="Model:" FontAttributes="Bold"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding Vehicle.Model}"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="Year:" FontAttributes="Bold"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding Vehicle.Year}"/>
                        
                        <Label Grid.Row="3" Grid.Column="0" Text="License Plate:" FontAttributes="Bold"/>
                        <Label Grid.Row="3" Grid.Column="1" Text="{Binding Vehicle.LicensePlate}"/>
                        
                        <Label Grid.Row="4" Grid.Column="0" Text="VIN:" FontAttributes="Bold"/>
                        <Label Grid.Row="4" Grid.Column="1" Text="{Binding Vehicle.VIN}"/>
                        
                        <Label Grid.Row="5" Grid.Column="0" Text="Color:" FontAttributes="Bold"/>
                        <Label Grid.Row="5" Grid.Column="1" Text="{Binding Vehicle.Color}"/>
                        
                        <Label Grid.Row="6" Grid.Column="0" Text="Mileage:" FontAttributes="Bold"/>
                        <Label Grid.Row="6" Grid.Column="1" Text="{Binding Vehicle.Mileage, StringFormat='{0:N0} km'}"/>
                    </Grid>
                    
                    <Label Text="{Binding Vehicle.Status}"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Action Buttons -->
            <Button Text="Edit"
                    Command="{Binding EditVehicleCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"/>

            <Button Text="Delete"
                    Command="{Binding DeleteVehicleCommand}"
                    BackgroundColor="Red"
                    TextColor="White"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"/>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                              IsVisible="{Binding IsBusy}"
                              HorizontalOptions="Center"
                              Color="{StaticResource Primary}"/>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
