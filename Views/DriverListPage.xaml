<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ParcAuto_Web_App.ViewModels"
             xmlns:models="clr-namespace:ParcAuto_Web_App.Models"
             x:Class="ParcAuto_Web_App.Views.DriverListPage"
             Title="Drivers"
             x:DataType="viewmodels:DriverListViewModel">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding AddDriverCommand}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*" Padding="10">
        <Button Text="Refresh"
                Command="{Binding RefreshCommand}"
                Grid.Row="0"
                Margin="0,0,0,10"/>

        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Drivers}">
                <CollectionView.EmptyView>
                    <StackLayout Padding="20" VerticalOptions="Center">
                        <Label Text="No drivers found"
                               HorizontalTextAlignment="Center"
                               FontSize="16"
                               TextColor="Gray"/>
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Driver">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete"
                                               BackgroundColor="Red"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DriverListViewModel}}, Path=DeleteDriverCommand}"
                                               CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Frame Padding="10" Margin="5" HasShadow="True" CornerRadius="8">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DriverListViewModel}}, Path=EditDriverCommand}"
                                        CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>

                                <Grid ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Grid.Column="0">
                                        <Label Text="{Binding FirstName, StringFormat='{0}'}"
                                               FontSize="18"
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding LastName, StringFormat='{0}'}"
                                               FontSize="16"
                                               TextColor="Gray"/>
                                        <Label Text="{Binding LicenseNumber, StringFormat='License: {0}'}"
                                               FontSize="14"
                                               TextColor="DarkGray"/>
                                        <Label Text="{Binding PhoneNumber, StringFormat='Phone: {0}'}"
                                               FontSize="14"
                                               TextColor="DarkGray"
                                               IsVisible="{Binding PhoneNumber, Converter={StaticResource StringNotEmptyConverter}}"/>
                                        <Label Text="{Binding Email, StringFormat='Email: {0}'}"
                                               FontSize="14"
                                               TextColor="DarkGray"
                                               IsVisible="{Binding Email, Converter={StaticResource StringNotEmptyConverter}}"/>
                                    </VerticalStackLayout>

                                    <Image Grid.Column="1"
                                           Source="dotnet_bot.png"
                                           WidthRequest="50"
                                           HeightRequest="50"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
