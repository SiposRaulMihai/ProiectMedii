<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ParcAuto_Web_App.ViewModels"
             x:Class="ParcAuto_Web_App.Views.DriverEditPage"
             Title="{Binding PageTitle}"
             x:DataType="viewmodels:DriverEditViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <Label Text="First Name *" FontSize="14" FontAttributes="Bold"/>
            <Entry Text="{Binding FirstName}" 
                   Placeholder="Enter first name"
                   Keyboard="Text"/>

            <Label Text="Last Name *" FontSize="14" FontAttributes="Bold"/>
            <Entry Text="{Binding LastName}" 
                   Placeholder="Enter last name"
                   Keyboard="Text"/>

            <Label Text="License Number *" FontSize="14" FontAttributes="Bold"/>
            <Entry Text="{Binding LicenseNumber}" 
                   Placeholder="Enter license number"
                   Keyboard="Text"/>

            <Label Text="Phone Number" FontSize="14" FontAttributes="Bold"/>
            <Entry Text="{Binding PhoneNumber}" 
                   Placeholder="Enter phone number (optional)"
                   Keyboard="Telephone"/>

            <Label Text="Email" FontSize="14" FontAttributes="Bold"/>
            <Entry Text="{Binding Email}" 
                   Placeholder="Enter email (optional)"
                   Keyboard="Email"/>

            <Label Text="* Required fields" 
                   FontSize="12" 
                   TextColor="Gray"
                   Margin="0,10,0,0"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Text="Save"
                        Command="{Binding SaveCommand}"
                        Grid.Column="0"
                        BackgroundColor="#28a745"/>

                <Button Text="Cancel"
                        Command="{Binding CancelCommand}"
                        Grid.Column="1"
                        BackgroundColor="#6c757d"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
