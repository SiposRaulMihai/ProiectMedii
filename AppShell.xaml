<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ParcAuto_Web_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ParcAuto_Web_App"
    xmlns:views="clr-namespace:ParcAuto_Web_App.Views"
    Title="ParcAuto"
    FlyoutBehavior="Flyout">

    <Shell.FlyoutHeader>
        <Grid Padding="20" BackgroundColor="{StaticResource Primary}">
            <VerticalStackLayout Spacing="5">
                <Label Text="Bun venit!"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="White"/>
                <Label x:Name="UserEmailLabel"
                       Text="user@example.com"
                       FontSize="14"
                       TextColor="White"
                       Opacity="0.9"/>
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <Shell.FlyoutFooter>
        <Grid Padding="20">
            <Button Text="Logout"
                    Clicked="OnLogoutClicked"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"
                    BorderColor="{StaticResource Primary}"
                    BorderWidth="1"/>
        </Grid>
    </Shell.FlyoutFooter>

    <!-- Vehicles -->
    <FlyoutItem Title="Vehicles" Icon="car.png">
        <ShellContent
            Title="Vehicles"
            ContentTemplate="{DataTemplate views:VehicleListPage}"
            Route="vehicles" />
    </FlyoutItem>

    <!-- Drivers -->
    <FlyoutItem Title="Drivers" Icon="dotnet_bot.png">
        <ShellContent
            Title="Drivers"
            ContentTemplate="{DataTemplate views:DriverListPage}"
            Route="drivers" />
    </FlyoutItem>

    <!-- Reservations -->
    <FlyoutItem Title="Reservations" Icon="calendar.png">
        <ShellContent
            Title="Reservations"
            ContentTemplate="{DataTemplate views:ReservationListPage}"
            Route="reservations" />
    </FlyoutItem>

    <!-- Home (MainPage) -->
    <FlyoutItem Title="Home" Icon="home.png">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

</Shell>
