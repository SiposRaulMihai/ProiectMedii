@page
@model ParcAuto.Web.Pages.Vehicles.IndexModel

@{
    ViewData["Title"] = "Vehicles";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>üöô Vehicles</h2>
    <div>
        <a asp-page="/Index" class="btn btn-outline-secondary">üè† Home</a>
        <a asp-page="Create" class="btn btn-primary">+ Add Vehicle</a>
    </div>
</div>

<div class="card shadow">
    <div class="card-body">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle[0].LicensePlate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle[0].Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle[0].Mileage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Vehicle) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LicensePlate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mileage)
            </td>
            <td>
                @if (item.Status == "Available")
                {
                    <span class="badge bg-success">Available</span>
                }
                else
                {
                    <span class="badge bg-danger">In Use</span>
                }
            </td>
            <td>
                <div class="btn-group btn-group-sm" role="group">
                    <a asp-page="./Details" asp-route-id="@item.VehicleId" class="btn btn-info">Details</a>
                    <a asp-page="./Edit" asp-route-id="@item.VehicleId" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.VehicleId" class="btn btn-danger" onclick="return confirmDelete('@User.Identity.IsAuthenticated')">Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
</div>
