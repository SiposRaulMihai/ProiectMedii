@page
@model ParcAuto.Web.Pages.FuelLogs.DetailsModel

@{
    ViewData["Title"] = "Fuel Log Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>â›½ Fuel Log Details</h2>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.FuelLog.FuelLogId" class="btn btn-warning">Edit</a>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<div class="card shadow">
    <div class="card-body">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FuelLog.Vehicle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FuelLog.Vehicle.LicensePlate) - @Html.DisplayFor(model => model.FuelLog.Vehicle.Make) @Html.DisplayFor(model => model.FuelLog.Vehicle.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FuelLog.FuelDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FuelLog.FuelDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FuelLog.Liters)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FuelLog.Liters)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FuelLog.Price)
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:C}", Model.FuelLog.Price)
        </dd>
    </dl>
    </div>
</div>
